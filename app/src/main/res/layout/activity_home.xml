<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.home.HomeActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="200dp"
        android:src="@mipmap/user_image_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/manrope_semibold"
        android:lineHeight="24dp"
        android:textColor="@color/description_bold_color"
        android:textFontWeight="600"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView" />

    <TextView
        android:id="@+id/txt_user_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/manrope"
        android:lineHeight="22dp"
        android:textAlignment="center"
        android:textColor="#666666"
        android:textFontWeight="400"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_name" />

    <LinearLayout
        android:id="@+id/ll_interests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_user_bio">

        <TextView
            android:id="@+id/txt_interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/interests_drawable"
            android:fontFamily="@font/manrope"
            android:lineHeight="12dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/description_color"
            android:textFontWeight="500"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_interest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/interests_drawable"
            android:fontFamily="@font/manrope"
            android:lineHeight="12dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/description_color"
            android:textFontWeight="500"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_interest3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/interests_drawable"
            android:fontFamily="@font/manrope"
            android:lineHeight="12dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/description_color"
            android:textFontWeight="500"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_following_follower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_interests">

        <TextView
            android:id="@+id/txt_followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/manrope_semibold"
            android:lineHeight="22dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/description_bold_color"
            android:textFontWeight="600"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/manrope"
            android:text="Followers"
            android:lineHeight="12dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#808080"
            android:textFontWeight="500"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/txt_following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/manrope_semibold"
            android:lineHeight="22dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/description_bold_color"
            android:textFontWeight="600"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Following"
            android:fontFamily="@font/manrope"
            android:lineHeight="12dp"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#808080"
            android:textFontWeight="500"
            android:textSize="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_drawable"
        android:fontFamily="@font/manrope_bold"
        android:lineHeight="24dp"
        android:text="@string/logout"
        android:textFontWeight="700"
        android:textSize="16dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_following_follower" />

</androidx.constraintlayout.widget.ConstraintLayout>